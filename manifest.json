{
  "manifest_version": 3,
  "name": "Shaper",
  "version": "1.0",
  "description": "A Request Interception and Modification Plugin",
  "action": {
    "default_title": "Shaper",
    "default_popup": "src/popup/popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/content.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  }
}